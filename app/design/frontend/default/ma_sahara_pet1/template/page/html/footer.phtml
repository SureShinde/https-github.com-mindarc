            // Read More/Description Hider Toggle
            $('.visible-xs.about-desc-button').on('click', function () {
                $('.visible-xs.about-desc').toggleClass('showing');
                $('.visible-xs.about-desc').toggleClass('gradientback');
                if ($('.visible-xs.about-desc').hasClass('showing')) {
                    $(this).text('Show Less');
                } else {
                    $(this).text('Read More');
                }
            });

            // Mobile only script
            if ($(window).width() < 768) {
              // Categories page - hider function
                  $('dd ol').hide();
                  $('dl#narrow-by-list dt').on('click', function () {
                      $('dd ol').slideToggle(100);
                  });

                  var height = 'auto';
                  $('#sequence .slider-bg').each(function () {
                      height = Math.max(height, $(this).height());
                  });
                  $('#sequence').height(height);

                $('.block-footer-links .footer-title').click(function(){
                    $('.footer-content-list').slideUp(300);
                    if(!$(this).hasClass('active')){
                        $(this).addClass('active')
                        $(this).next().slideDown(300);
                    }else{
                        $(this).removeClass('active');
                    }
                });
            }
        });
        $(window).load(function () {
            var height = 0;

            $('#sequence .slider-bg').each(function () {
                height = Math.max(height, $(this).height())
            });
            $('#sequence').height(height);
            $('.ui-accordion-header').click(function() {
                $(this).find('.fa').toggleClass('fa-angle-down');
                $(this).find('.fa').toggleClass('fa-angle-up');
            });
        });
    })(jQuery);
</script>
